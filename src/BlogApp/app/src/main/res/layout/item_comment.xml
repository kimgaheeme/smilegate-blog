<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_comment_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                style="@style/MEDIUM_TEXT"/>

            <ImageButton
                android:id="@+id/btn_delete_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="#BABABA"
                android:background="@null"
                android:layout_marginHorizontal="@dimen/post_item_between"
                android:src="@drawable/ic_baseline_clear_24"
                app:tint="#BABABA"/>

            <ImageButton
                android:id="@+id/btn_update_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:src="@drawable/ic_baseline_border_color_24"
                app:tint="#BABABA" />


        </LinearLayout>

        <TextView
            android:id="@+id/label_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SMALL_TEXT"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="#BABABA"/>

    </LinearLayout>

</LinearLayout>

